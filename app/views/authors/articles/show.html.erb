<%= link_to "Edit", edit_authors_article_path(@article), class: 'btn btn-sm btn-warning' %>
<%= link_to "Delete", authors_article_path(@article),
					method: :delete,
					data: {confirm: 'Are you sure want to delete?'},
					class: 'btn btn-sm btn-danger' %>

<div class="row">
	<div class="col-md-2 col-md-offset-5">
<h1><%= @article.title %></h1>
<p><%= @article.body.html_safe %></p>
</div>
</div>

