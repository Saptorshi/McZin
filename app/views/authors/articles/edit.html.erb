<%= form_for :post, url: authors_article_path(@article), method: :patch do |f| %>
	<% if @article.errors.any? %>
		<% @article.errors.full_messages.each do |err| %>
			<div class="alert alert-danger"> <%= err %> </div>
		<% end %>
	<% end %>


	<div class="row">
	    <div class="col-md-3">

			<div class="card" >
			  <div class="card-block">
			    <h4 class="card-title">Edit Article</h4>
			  </div>
			  <ul class="list-group list-group-flush">
			    <li class="list-group-item">
			    	<div class="field">
					    <%= f.label :title %><br>
					    <%= f.text_field :title, class: 'form-control' %>
				    </div>
			    </li>
			    <li class="list-group-item">
			    	<div class="actions">
					   <%= f.submit "Save Article", class: 'btn btn-success btn-block btn-lg'  %>
				  	</div>
			    </li>
			    <!-- <li class="list-group-item">
			    	
			    </li> -->
			  </ul>
			  
			</div>

	      
	     </div>

	     <div class="col-md-9">
	      <div class="field">
	        <%= f.label :body %>
	        <%= f.text_area :body, class: 'form-control' %>
	      </div>
	    </div>
	</div>

	

	
<% end %>


