<div class="well">
  <div>
    <span><strong><%= comment.title %></strong></span>
    <span><%= comment.body %></span>
    <span><%= comment.root? ? "Started by" : "Replied by" %> <strong><%= comment.author %></strong> on
    <%= l(comment.created_at, format: '%B, %d %Y %H:%M:%S') %></span>
  </div>

  
  <% from_reply_form ||= nil %>
	<% unless from_reply_form %>
		<% if comment.leaf? %>
		 <small class="text-muted">There are no replies yet - be the first one to reply!</small>
  		<% end %>
		<p><%= link_to 'reply', new_comment_path(comment.id) %></p>
	<% end %>
</div>